{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "globals": {
        "$": false,
        "videojs": false,
        "particlesJS": false,
        "dd": false,
        "__dirname": false,
        "process": false,
        "describe": false,
        "it": false,
        "expect": false,
        "_this": false
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "indent": [
            "error", 4, { "SwitchCase": 1, "VariableDeclarator": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
